<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:cardElevation="-2dp"
        android:background="@drawable/bacground_card_descuento"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/imagen_descuento"
                android:src="@color/color3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:id="@+id/titulo_descuento"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/contenido_descuento"
                    android:text="Contenido"
                    android:autoSizeTextType="uniform"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ED5858"
                    android:id="@+id/btn_eliminar_descuento"
                    android:text="Eliminar"
                    android:textColor="#fff" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/btn_add_descuento"
                    android:layout_gravity="center|right">
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="50dp"
        android:background="@drawable/backgorund_descuento"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10%"
            android:id="@+id/cantidad_descuento"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_bold"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>